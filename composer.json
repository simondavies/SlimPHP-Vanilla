{
  "name":             "simondavies/slimphp-vanilla",
  "description":      "A simple base app, using the PHP framework PHP Slim at its heart featuring Laravel's Elequent ORM",
  "keywords":         ["php", "slim", "laravel", "framework", "elequent"],
  "homepage":         "https://github.com/simondavies/SlimPHP-Vanilla",
  "license":          "MIT",
  "authors": [
    {
      "name":         "Simon Davies",
      "email":        "simondavies@live.co.uk",
      "homepage":     "http://www.simondavies.net",
    }
  ],
  "require" :{
    "php": ">=5.4",
    "slim/slim": "~2.5",
    "slim/views": "0.1.*",
    "twig/twig": "~1.16",
    "monolog/monolog": "~1.12",
    "illuminate/database": "4.2.*",
    "vlucas/phpdotenv": "~1.1",
    "symfony/var-dumper": "~2.6"
  },
  "require-dev": {
    "behat/behat": "2.*",
    "phpspec/phpspec": "~2.1"
  },
  "autoload": {
    "psr-4": {"SlimVanilla\\": "App/SlimVanilla"}
  },
  "config": {
    "preferred-install": "dist",
    "bin-dir": "vendor/bin"
  },
  "minimum-stability": "stable"
}
